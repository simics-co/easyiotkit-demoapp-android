<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kubotaku.android.sample.sensordataviewer.SensorDataActivity"
    tools:showIn="@layout/activity_sensor_data">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp">

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:columnCount="3"
                app:rowCount="5">

                <TextView
                    android:id="@+id/sensor_data_text_last_value"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="0"
                    app:layout_columnSpan="3"
                    app:layout_gravity="center_horizontal"
                    app:layout_row="0" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensor_data_title_last_update"
                    app:layout_column="0"
                    app:layout_columnSpan="3"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/sensor_data_text_last_update"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="0"
                    app:layout_columnSpan="3"
                    app:layout_gravity="center_horizontal"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/sensor_data_label_avg"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_horizontal"
                    app:layout_row="3" />

                <TextView
                    android:id="@+id/sensor_data_label_min"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_horizontal"
                    app:layout_row="3" />

                <TextView
                    android:id="@+id/sensor_data_label_max"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_horizontal"
                    app:layout_row="3" />

                <TextView
                    android:id="@+id/sensor_data_text_avg"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_horizontal"
                    app:layout_row="4" />

                <TextView
                    android:id="@+id/sensor_data_text_min"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_horizontal"
                    app:layout_row="4" />

                <TextView
                    android:id="@+id/sensor_data_text_max"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_horizontal"
                    app:layout_row="4" />


            </android.support.v7.widget.GridLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sensor_data_text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/sensor_data_chart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
